<div class="container">
  <section class="row pb-5 pt-5 align-items-center justify-content-end">
    <div class="col col-12 col-md-auto">
      <% if current_user.profile_picture.attached? %>
          <%= cl_image_tag current_user.profile_picture.key, height: 150, width: 150, crop: :fill, class: 'rounded-circle' %>
        <% else %>
          <%= image_tag "useravatar.jpeg", height: 150, width: 150, class: 'rounded-circle' %>
        <% end %>
    </div>
    <div class="col-12 col-md">
      <p class="mb-1"><%= current_user.email %></p>
      <%= link_to  "Edit", user_path %>
    </div>
    <div class="col col-12 col-md-auto">
      <div class="statistics__container">
        <span class="statistics__icon"><i class="far fa-calendar-alt"></i></span>
      	<p class="statistics__text"><%= @my_bookings.count %></p>
        <p class="statistics__label">Booking<%= @my_bookings.count > 1 ? 's' : '' %> made</p>
      </div>
    </div>
    <div class="col col-12 col-md-auto">
      <div class="statistics__container">
        <span class="statistics__icon"><i class="far fa-calendar-alt"></i></span>
      	<p class="statistics__text"><%= @my_equipment_bookings.sum { |equipment_bookings| equipment_bookings.count } %></p>
        <p class="statistics__label">Equipment booked</p>
      </div>
    </div>
  </section>
</div>
<div class="bg-white">
  <section class="pb-5 pt-5 container">
    <h1 class="mb-3">Your bookings</h1>
    <div class="row">
      <% @my_bookings.each do |booking| %>
        <div class="col-12 col col-md-6 col-lg-4">
          <div class="card mb-3">
              <%= link_to equipment_path(booking.equipment) do %>
                <% if booking.equipment.photos.attached? %>
                  <%= cl_image_tag booking.equipment.photos.first.key, crop: :fill, class: 'w-100', alt: "Photo de l'équipement" %>
                <% else %>
                  <%= image_tag "default_equipment_photo.jpg", alt: "Photo de l'équipement", class: "w-100" %>
                <% end %>
              <% end %>
              <div class="card-body">
                <div class="row">
                  <div class="col col-12 col-lg-7">
                    <%= link_to booking.equipment.title, equipment_path(booking.equipment), class: 'card-title h5' %>
                    <p class="card-subtitle mb-3 text-muted"><%= booking.equipment.category %></p>
                  </div>

                  <div class="col col-12 col-lg-5">
                    <% case booking.accepted %>
                      <% when "accepted" %>
                        <p class="text-success"><i class="fas fa-check"></i> Accepted</p>
                    <% when "refused" %>
                      <p class="text-danger"><i class="fas fa-ban"></i> Rejected</p>
                    <% else %>
                      <p class="text-danger"><i class="far fa-hourglass"></i></i> Pending</p>
                    <% end %>
                  </div>
                </div>
              </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
<section class="pb-5 pt-5 container">



    <% if @my_equipment_bookings.empty? %>  
      <p>No booking requests pending. <%= link_to  "Sell equipment", new_equipment_path %></p>
    <% else %>
    <h1 class="mb-3">Bookings waiting for approval</h1>
      <div class="row">
        <% @my_equipment_bookings.each do |equipment_bookings| %>
          <% equipment_bookings.each do |booking| %>
            <div class="col-12 col col-md-6 col-lg-4">
              <div class="card mb-3">
                  <%= link_to equipment_path(booking.equipment) do %>
                    <% if booking.equipment.photos.attached? %>
                      <%= cl_image_tag booking.equipment.photos.first.key, crop: :fill, class: 'w-100', alt: "Photo de l'équipement" %>
                    <% else %>
                      <%= image_tag "default_equipment_photo.jpg", alt: "Photo de l'équipement", class: "w-100" %>
                    <% end %>
                  <% end %>
                  <div class="card-body">
                    <div class="row">
                      <div class="col col-12 col-lg-8">
                        <%= link_to booking.equipment.title, equipment_path(booking.equipment), class: 'card-title h5' %>
                        <p class="card-subtitle mb-3 text-muted"><%= booking.equipment.category %></p>
                      </div>

                      <div class="col col-12 col-lg-4">
                        <%= link_to [booking, { booking: { accepted: 'accepted' }}], method: 'patch' do %>
                          <p class="text-success mb-1"><i class="fas fa-check"></i> Accept</p>
                        <% end %>
                        <%= link_to [booking, { booking: { accepted: 'refused' }}], method: 'patch' do %>
                          <p class="text-danger m-0"><i class="fas fa-ban"></i> Refuse</p>
                        <% end %>
                      </div>
                    </div>
                  </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
</section>


