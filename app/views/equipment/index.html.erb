<div class="container p-4">
  <div class="row mb-4">
    <div class="col-12 col-md-6">
    <%= link_to '/search_results?query=water sports' do %>
      <div class="card-category col-sm m-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://catalystshop.com/media/catalog/product/cache/1/image/9df78eab33525d08d6e5fb8d27136e95/c/h/chum_9.jpg)">
        Water Sports
      </div>
    <% end %>
  </div>

    <div class="col-12 col-md-6">
      <%= link_to '/search_results?query=winter sports' do %>
        <div class="card-category col-sm m-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://cdn.shopify.com/s/files/1/0247/8797/6245/products/WagnerSkisSquare_2000x.jpg?v=1593536699)">
          Winter Sports
        </div>
      <% end %>
    </div>
  </div>


  <div class="row">

    <div class="col-12 col-md-6">
      <%= link_to '/search_results?query=sports balls' do %>
        <div class="card-category col-sm m-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.moving-minds.com/cmsstatic/img/976/G-72046-RainbowUltraPlayRecessReady-PACK-1-clean.jpg)">
          Sports Balls
         </div>
      <% end %>
  </div>

  <div class="col-12 col-md-6">
    <%= link_to '/search_results?query=footwear' do %>
      <div class="card-category col-sm m-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://seattlebackpackersmagazine.com/wp-content/uploads/2015/04/IMG_2218.jpg)">
        Footwear
       </div>
     <% end %>
    </div>
  </div>

</div>

    <div class="container mt-5 mb-3">
      <div class="row">
        <div class="col-12 col-md-6">
          <h2 class="text-center mb-3">Recently added Equipment</h2>
          <% @equipment.each do |equipment| %>
            <div class="card">
              <div class="row">
                <div class="col col-12 col-md-4">
                <%= link_to equipment_path(equipment) do %>
                    <%= cl_image_tag equipment.photos.first.key, crop: :fill, class: 'w-100', alt: "Equipment photo" %>
                <% end %>
                </div>
                <div class="col-12 col-md-8">
                  <div class="card-body">
                    <%= link_to equipment.title, equipment_path(equipment), class: 'card-title h5' %>
                    <p class="card-price"><%= equipment.price %>$<span>/day</span></p>
                    <p class="card-subtitle mb-3 text-muted"><%= equipment.category %></p>
                    <p class="card-text"><%= equipment.description %>.</p>

                  </div>
                </div>
              </div>
            </div>
          <% end %>
          </div>
          <div class="col-12 col-md-6">
            <h2 class="text-center mb-3">Equipment near you</h2>
            <div id="map"
              style="width: 100%; height: 100vh"
              data-markers="<%= @markers.to_json %>"
              data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
          </div>
      </div>
    </div>

