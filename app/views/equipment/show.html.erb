<div class="container">
  <div class="row">
    <div class=""><h1><%= @equipment.title %></h1></div>
      <%= link_to 'Back', equipment_index_path %>
      <%= link_to 'Edit', edit_equipment_path(@equipment) %>
      <%= link_to 'Delete', equipment_path(@equipment), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
  </div>
  <div class="row">
    <p class><%= @equipment.location %></p>
  </div>
  <div class="row">
    <div class="p-2"><h4><%= @equipment.category %></h4></div>
  </div>
  <div class="row">
      <% @equipment.photos.each do |photo| %>
      <%= cl_image_tag photo.key, class: "w-50" %>
      <% end %>
  </div>
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="p-2 bd-highlight"><p class><%= @equipment.price %>$ /day</p></div>
        <div class="p-2 bd-highlight"><h4 class><%= @equipment.description %></h4></div>
      </div>
      <div class="col-12 col-md-6">
          <%= render '/bookings/form' %>
      </div>
    </div>

      <div class="container">
        <script src="https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js"></script>
        <link href="https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.css" rel="stylesheet" />
        <style>
          body { margin: 0; padding: 0; }
          #map { top: 0; bottom: 0; width: 100%; }
        </style>
      </div>
      <div id="map" style="height: 320px; width: 640px" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="pk.eyJ1IjoicHhjcm9uaW4iLCJhIjoiY2tnd2d0dThpMDJqbTJ6cmdra2Rqbmw4byJ9.UzNokaYnFf1IM89qnyFNxQ">
      </div>

  </div>



