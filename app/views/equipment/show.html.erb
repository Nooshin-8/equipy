<div class="container">
  <div class="row d-flex mt-5">
    <div class="col-12 col-md-8 d-flex justify-content-start">
    <h1 class><%= @equipment.title %></h1>
  </div>
  <div class="col-12 col-md-4 d-flex justify-content-end">
    <h1><%= @equipment.price %>$ / Day</h1>
  </div>
  </div>

  <div class="row">
    <p><%= @equipment.location %></br>By:<%= @equipment.user.email %></p>
  </div>
  <div class="row">
    <p><strong>Category:</strong><%= @equipment.category %></p>
  </div>
  <div class="row d-flex align-items-center justify-content-center">
  <% @equipment.photos.each do |photo| %>
  <%= cl_image_tag photo.key, class: "w-40" %>
  <% end %>
  </div>

  <div class="row mt-5">
    <div class="col-12 col-md-6">
      <h4><u>Description</u></h4>
      <p><%= @equipment.description %></p>
    </div>
    <div class="booking-form col-12 col-md-6">
      <h4>Request to book at <%= @equipment.price %> $ per day</h4>
      <%= render '/bookings/form' %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-12 col-md-6">
      <h4><u>Reviews</u> <%= link_to "Add a Review", new_equipment_review_path(@equipment) %></h4>
      <% @equipment.reviews.each do |r| %>
        <h5><%= r.title %>
        <% r.rating.times do %>
          ⭐
        <% end %>        
        <%= User.find(r.user_id).email %> <%= link_to "✏", edit_equipment_review_path(r.id) %> <%= link_to "♻", equipment_review_path(r.id), method: :delete, data: {confirm: "Are you sure?"} %></h5>
        <p><%= r.description %></p>
      <% end %>
    </div>
  </div>

