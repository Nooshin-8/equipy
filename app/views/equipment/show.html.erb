<div class="container">
  <div class="row">
    <div class=""><h1><%= @equipment.title %></h1></div>
      <%= link_to 'Back', equipment_index_path %>
      <%= link_to 'Edit', edit_equipment_path(@equipment) %>
      <%= link_to 'Delete', equipment_path(@equipment), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
  </div>
  <div class="row">
    <p class><%= @equipment.location %></p>
  </div>
  <div class="row">
    <div class="p-2"><h4><%= @equipment.category %></h4></div>
  </div>
  <div class="row">
      <% @equipment.photos.each do |photo| %>
      <%= cl_image_tag photo.key, class: "w-50" %>
      <% end %>
  </div>
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="p-2 bd-highlight"><p class><%= @equipment.price %>$ /day</p></div>
        <div class="p-2 bd-highlight"><h4 class><%= @equipment.description %></h4></div>
      </div>
      <div class="col-12 col-md-6">
          <%= render '/bookings/form' %>
      </div>
    </div>
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>

  </div>



